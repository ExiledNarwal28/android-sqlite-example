<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.EmployeActivity">

  <include
    layout="@layout/toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"/>

  <TextView
    android:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="65dp"
    android:id="@+id/tv_employee_name"
    tools:text="@string/employee_name"
    android:textAppearance="@android:style/TextAppearance.Material.Title"
    android:textSize="20sp"/>

  <TextView
    android:text="@string/employee_job"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tv_employee_name"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/tv_task_description"/>

  <TextView
    android:text="@string/employee_mail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_task_description"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/tv_task_date"
    android:layout_marginTop="10dp"/>

  <TextView
    android:text="@string/employee_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_task_date"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/tv_employee_phone"
    android:layout_marginTop="10dp"/>

  <Button
    android:text="@string/action_call"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:id="@+id/btn_employee_call"
    android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Colored"
    android:fontFamily="sans-serif-medium"
    style="@android:style/Widget.Material.Button.Colored"
    android:background="@color/colorAccent"/>

  <Button
    android:text="@string/action_send_sms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btn_employee_send_sms"
    style="@android:style/Widget.Material.Button.Colored"
    android:background="@color/colorPrimary"
    android:layout_above="@+id/btn_employee_call"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="10dp"/>

</RelativeLayout>