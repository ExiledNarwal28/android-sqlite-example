<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/content_edit_employee"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context=".fragments.UpdateEmployeeFragment">

  <EditText
    android:hint="@string/employee_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/et_employe_nom"
    tools:text="@string/employee_name"
    android:textAppearance="@android:style/TextAppearance.Material.Title"
    android:textSize="20sp"/>

  <EditText
    android:hint="@string/employee_job"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/et_employe_nom"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/et_employe_poste"
    android:textAppearance="@android:style/TextAppearance.Material.Small"
    android:fontFamily="sans-serif"/>

  <EditText
    android:hint="@string/employee_mail"
    android:inputType="textEmailAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/et_employe_poste"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/et_employe_email"
    android:layout_marginTop="10dp"
    android:textAppearance="@android:style/TextAppearance.Material.Small"
    android:fontFamily="sans-serif"/>

  <EditText
    android:hint="@string/employee_phone"
    android:inputType="phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/et_employe_email"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/et_employe_telephone"
    android:layout_marginTop="10dp"
    android:textAppearance="@android:style/TextAppearance.Material.Small"
    android:fontFamily="sans-serif"/>

  <Button
    android:text="@string/action_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/btn_valider"
    style="@android:style/Widget.Material.Light.Button"
    tools:text="@string/action_confirm"
    android:background="@color/colorAccent"
    android:textAppearance="@android:style/TextAppearance.Material.Button"
    android:textColor="@color/colorPrimaryTextLight"/>

</RelativeLayout>