<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.info420.fabien.androidtravailpratique">

  <application
    android:name=".common.TaskerApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    
    <provider
      android:authorities="net.info420.fabien.androidtravailpratique.contentprovider"
      android:name=".contentprovider.TaskerContentProvider" />
    
    <activity android:name=".common.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    
    <activity
      android:name=".common.TaskActivity"
      android:label="@string/title_activity_task"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.EditTaskActivity"
      android:label="@string/title_activity_edit_task"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.NewTaskActivity"
      android:label="@string/title_activity_new_task"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.PrefsActivity"
      android:label="@string/title_activity_prefs"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.EmployeeListActivity"
      android:label="@string/title_activity_employee_list"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.EditEmployeeActivity"
      android:label="@string/title_activity_edit_employee"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.NewEmployeeActivity"
      android:label="@string/title_activity_new_employee"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    
    <activity
      android:name=".common.EmployeeActivity"
      android:label="@string/title_activity_employee"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>