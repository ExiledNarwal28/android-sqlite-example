      android:label="@string/title_activity_prefs"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity android:name=".EmployeeListActivity">
    </activity>
    <activity
      android:name=".EditEmployeeActivity"
      android:label="@string/title_activity_edit_employee"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:name=".NewEmployeeActivity"
      android:label="@string/title_activity_new_employee"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:name=".EmployeeActivity"
      android:label="@string/title_activity_employee"
      android:theme="@style/AppTheme.NoActionBar">
